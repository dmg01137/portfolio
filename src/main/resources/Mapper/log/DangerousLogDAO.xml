<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.log.DangerousLogDAO">

    <!-- Result Map -->
    <resultMap id="dangerousLogResultMap" type="com.example.demo.dto.log.DangerousLog">
        <id property="dangerous_number" column="dangerous_number"/>
        <result property="ip" column="ip"/>
        <result property="port" column="port"/>
        <result property="detection_number" column="detection_number"/>
    </resultMap>

    <!-- Select by ID -->
    <select id="findByDangerousNumber" resultMap="dangerousLogResultMap" parameterType="int">
        SELECT *
        FROM log_db.dangerous_log_20240719
        WHERE dangerous_number = #{dangerous_number}
    </select>

    <!-- Select all -->
    <select id="findAll" resultMap="dangerousLogResultMap">
           SELECT *
        FROM log_db.${tableName}
    </select>

  

    <!-- Multiple criteria search -->
   <select id="findByMultipleCriteria" resultMap="dangerousLogResultMap" parameterType="map">
    SELECT *
    FROM log_db.${tableName}
    WHERE 1=1
    <if test="criteria.dangerous_number != null">
        AND dangerous_number  = #{criteria.dangerous_number}
    </if>
    <if test="criteria.ip != null and criteria.ip != ''">
        AND ip LIKE CONCAT('%', #{criteria.ip}, '%')
    </if>
    <if test="criteria.port != null">
        AND port LIKE CONCAT('%', #{criteria.port}, '%')
    </if>
    <if test="criteria.policy_name != null">
        AND policy_name LIKE CONCAT('%', #{criteria.policy_name}, '%')
    </if>
</select>

    
    <!-- 다중 검색 기능을 위한 패턴 로그 조회 -->
<select id="date"  resultMap="dangerousLogResultMap" parameterType="map">

    SELECT *
    FROM log_db.${tableName}
    WHERE 1=1
   <if test="criteria.dangerous_number != null">
        AND dangerous_number LIKE CONCAT('%', #{criteria.dangerous_number}, '%')
    </if>
    <if test="criteria.ip != null and criteria.ip != ''">
        AND ip LIKE CONCAT('%', #{criteria.ip}, '%')
    </if>
    <if test="criteria.port != null">
        AND port LIKE CONCAT('%', #{criteria.port}, '%')
    </if>
    <if test="criteria.policy_name != null">
        AND policy_name LIKE CONCAT('%', #{criteria.policy_name}, '%')
    </if>
</select>

</mapper>