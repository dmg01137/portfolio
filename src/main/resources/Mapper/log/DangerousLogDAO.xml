<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.dao.log.DangerousLogDAO">

    <!-- Result Map -->
    <resultMap id="dangerousLogResultMap" type="com.example.demo.dto.log.DangerousLog">
        <id property="dangerous_number" column="dangerous_number"/>
        <result property="ip" column="ip"/>
        <result property="port" column="port"/>
        <result property="detection_number" column="detection_number"/>
    </resultMap>

    <!-- Select by ID -->
    <select id="findByDangerousNumber" resultMap="dangerousLogResultMap" parameterType="int">
        SELECT *
        FROM log_db.dangerous_log_20240717
        WHERE dangerous_number = #{dangerous_number}
    </select>

    <!-- Select all -->
    <select id="findAll" resultMap="dangerousLogResultMap">
        SELECT *
        FROM log_db.dangerous_log_20240717
    </select>

    <!-- Insert -->
    <insert id="save" parameterType="com.example.demo.dto.log.DangerousLog">
        INSERT INTO log_db.dangerous_log_20240717 (ip, port, detection_number)
        VALUES (#{ip}, #{port}, #{detection_number})
    </insert>

    <!-- Update -->
    <update id="update" parameterType="com.example.demo.dto.log.DangerousLog">
        UPDATE log_db.dangerous_log_20240717
        SET ip = #{ip}, port = #{port}, detection_number = #{detection_number}
        WHERE dangerous_number = #{dangerous_number}
    </update>

    <!-- Delete -->
    <delete id="delete" parameterType="int">
        DELETE FROM log_db.dangerous_log_20240717 WHERE dangerous_number = #{dangerous_number}
    </delete>

    <!-- Multiple criteria search -->
    <select id="findByMultipleCriteria" resultMap="dangerousLogResultMap" parameterType="map">
        SELECT *
        FROM log_db.dangerous_log_20240717
         WHERE 1=1
        <where>
            <if test="dangerous_number != null">
                AND dangerous_number = #{dangerous_number}
            </if>
            <if test="ip!= null">
                AND ip LIKE CONCAT('%', #{ip}, '%')
            </if>
            <if test="port != null">
                AND port = #{port}
            </if>
            <if test="detection_number != null">
                AND detection_number = #{detection_number}
            </if>
        </where>
    </select>

</mapper>
